{
    "name": "z",
    "displayName": "Z language",
    "description": "Z syntax highlighting and formatting",
    "publisher": "diiyw",
    "repository": {
        "type": "git",
        "url": "https://github.com/diiyw/vscode-z"
    },
    "icon": "logo.png",
    "version": "0.1.0",
    "engines": {
        "vscode": "^1.99.0"
    },
    "categories": [
        "Programming Languages",
        "Formatters",
        "Debuggers"
    ],
    "contributes": {
        "languages": [
            {
                "id": "z",
                "aliases": [
                    "Z",
                    "z"
                ],
                "extensions": [
                    ".z"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "z",
                "scopeName": "source.z",
                "path": "./syntax/z.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "z",
                "path": "./snippets/z.code-snippets"
            }
        ],
        "breakpoints": [
            {
                "language": "z"
            }
        ],
        "debuggers": [
            {
                "type": "z",
                "label": "Z Debug",
                "program": "./dist/debugAdapter.js",
                "runtime": "node",
                "configurationAttributes": {
                    "launch": {
                        "required": [
                            "program"
                        ],
                        "properties": {
                            "program": {
                                "type": "string",
                                "description": "Absolute path to the program.",
                                "default": "${workspaceFolder}/${fileBasenameNoExtension}"
                            }
                        }
                    }
                },
                "initialConfigurations": [
                    {
                        "type": "z",
                        "request": "launch",
                        "name": "Launch Z Program",
                        "program": "${workspaceFolder}/${fileBasenameNoExtension}"
                    }
                ]
            }
        ]
    },
    "devDependencies": {
        "@types/node": "^24.1.0",
        "@types/vscode": "^1.99.0",
        "typescript": "^5.0.0",
        "vscode-languageclient": "^9.0.1",
        "vscode-languageserver": "^9.0.1",
        "vscode-languageserver-textdocument": "^1.0.12"
    },
    "main": "./dist/extension.js",
    "scripts": {
        "build": "tsc",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./"
    },
    "license": "MIT",
    "dependencies": {
        "@types/which": "^3.0.4",
        "@vscode/debugadapter": "^1.68.0",
        "@vscode/debugprotocol": "^1.68.0",
        "vscode-uri": "^3.1.0",
        "which": "^5.0.0"
    }
}
